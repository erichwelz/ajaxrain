<h2><%= @product.name %></h2>

<%= link_to "Back to Products", products_url %> | <%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete Product", @product, :confirm => "Are you sure you want to delete this item?", :method => :delete %>

<ul>
  <li><%= "Name: #{@product[:name]}" %></li> 
  <li><%= "Price #{@product.formatted_price}"%></li>
  <li><%= "Description: #{@product[:description]}" %></li>
</ul>

<% if current_user %>

  <h3>Reviews for <%= @product.name %></h3>

  <% @product.reviews.each do |review| %>
    <div class="review">
      <p>
          <%= review.comment %>
            <%= link_to "modify", "#{product_path}/reviews/#{review.id}" %>
          <br>
          <% if review.user != nil %>
            <em> By <%= review.user.email %></em>
            <em>Added on:</em> <%= review.created_at %>
          <% end %>
      </p>
    </div>
  <% end %>

  <h4>New Review</h4>

  <%= form_for([@product, @review], :remote => true) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to view reviews or add your own.</p>
<% end %>